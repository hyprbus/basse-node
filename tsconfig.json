{
  "compilerOptions": {
    "paths": {
      "@/*": ["*"]
    },
    "target": "es2017",
    "lib": ["es6"],
    "module": "CommonJS",
    "rootDir": "src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
